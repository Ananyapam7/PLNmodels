## We now use configure to find where NLopt is installed on the system
NLOPT_LIBS=@nlopt_libs@
CXX_STD = CXX11
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(SHLIB_OPENMP_CFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(NLOPT_LIBS)

all: clean

clean:
	rm -f $(SHLIB) $(OBJECTS)

